{{#if this.documentVersion}}
  {{#if (eq this.documentVersion.file.extension "pdf")}}
    {{pdf-view filePath=(concat "/files/" this.documentVersion.file.id "/download")}}
  {{else if this.htmlSnippet}}
    {{#if this.htmlSnippet.isPending}}
      Loading...
    {{else}}
      {{{this.htmlSnippet.content}}}
    {{/if}}
  {{else}}
    Document of type <i>{{this.documentVersion.file.extension}}</i> currently not supported for viewing.
  {{/if}}
{{else}}
  No document to view.
{{/if}}